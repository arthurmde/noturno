{
  "manifest_version": 2,
  "name": "noturno",
  "version": "1.0.0",
  "description": "Easily switch between proxy configurations",
  "permissions": [
    "proxy"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "data/off_16.png",
      "32": "data/off_32.png",
      "64": "data/off_64.png"
    },
    "default_title": "Proxy is Off - press ctrl+shift+X to turn on"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "linux": "Alt+Shift+X"
      },
    "description": "Send a 'toggle-feature' event"
    }
  }
}
